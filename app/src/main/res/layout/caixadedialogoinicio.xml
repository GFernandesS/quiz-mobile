<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customizadocarregamento">


        <ProgressBar
            android:layout_width="292dp"
            android:id="@+id/prgBar"
            android:layout_height="96dp"
            android:progressDrawable="@color/corFundo"
            android:progressTint="@color/corFundo"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgCarregando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prgBar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/imgcarregando"
            />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>